{
    "env": {
        "commonjs": true,
        "es2020": true,
        "node": true
    },
    "globals": {
      "describe": "readonly",
      "expect": "readonly",
      "context": "readonly",
      "it": "readonly"
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
      "eol-last": ["error", "always"],
      "space-before-function-paren": ["error", "always"]
    },
    "overrides": [
      {
        "files": ["*.test.js"],
        "rules": {
          "prefer-arrow-callback": "off",
          "no-unused-expressions": "warn"
        }
      }
    ]
}
